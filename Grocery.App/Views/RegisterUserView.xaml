<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.RegisterView"
             Title="Register">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Register" FontSize="32" HorizontalOptions="Center" />
        <Entry Placeholder="Name" Text="{Binding Name}" Keyboard="Default" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True" />
        <Button Text="Register" Command="{Binding RegisterCommand}" />
        <Label Text="{Binding RegisterMessage}" TextColor="Red" HorizontalOptions="Center" />
        <Button Text="Back to Login" Command="{Binding BackToLoginCommand}" />
    </VerticalStackLayout>
</ContentPage>